generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum IdType {
  PASSPORT
  NATIONAL_ID
  DRIVER_LICENSE
}

enum SalaryReleaseType {
  MONTHLY
  WEEKLY
  DAILY
  HOURLY
}

model IdentityVerification {
  id           String   @id @default(uuid()) @db.Uuid
}

model SalaryRelease {
  id          String   @id @default(uuid()) @db.Uuid
}

model Employee {
  id         String   @id @default(uuid()) @db.Uuid
  firstName  String
  lastName   String
  email      String   @unique
  salary     Int
  companyId  String @db.Uuid
  company    Company  @relation(fields: [companyId], references: [id])
  idType     IdType   @default(PASSPORT)
  idNumber   String
  releaseType SalaryReleaseType @default(MONTHLY)
  createdAt  DateTime @db.Timestamptz(0) @default(now())
  uppdatedAt  DateTime @db.Timestamptz(0) @default(now()) @updatedAt
  deletedAt DateTime? @db.Timestamptz(0)

  @@map("employees")
}

model Company {
  id          String   @id @default(uuid()) @db.Uuid
  name        String
  employees  Employee[]

  @@map("companies")
}
